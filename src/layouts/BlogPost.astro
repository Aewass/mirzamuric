---
import Layout from "./Layout.astro";
import { ChevronLeft, Home } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  tags?: string[];
  image?: string;
}

const { title, description, pubDate, tags, image } = Astro.props;
---

<Layout title={title} description={description}>
  <article class="max-w-4xl mx-auto px-4 py-20">
    <nav aria-label="Breadcrumb" class="mb-16">
      <div class="flex items-center gap-4">
        <a 
          href="/" 
          class="text-gray-400 hover:text-black dark:hover:text-white transition-colors"
        >
          <Home class="w-5 h-5" />
        </a>
        <ChevronLeft class="w-5 h-5 text-gray-400 dark:text-gray-500" />
        <a 
          href="/blog" 
          class="text-gray-400 hover:text-black dark:hover:text-white transition-colors"
        >
          Blog
        </a>
      </div>
    </nav>

    <div class="mb-16">
      <span class="text-sm text-gray-400 dark:text-gray-500 mb-4 block">
        {pubDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </span>
      <h1 class="text-4xl font-bold mb-6">{title}</h1>
      <p class="text-gray-600 dark:text-gray-300 text-lg leading-relaxed">{description}</p>
    </div>

    {image && (
      <img 
        src={image} 
        alt={title} 
        class="w-full aspect-[21/9] object-cover mb-16" 
      />
    )}

    {tags && (
      <div class="flex flex-wrap gap-3 mb-16">
        {tags.map(tag => (
          <span class="text-[11px] uppercase tracking-wide text-gray-400 dark:text-gray-500">
            {tag}
          </span>
        ))}
      </div>
    )}

    <div class="prose prose-lg max-w-none dark:prose-invert prose-headings:font-normal prose-a:text-black dark:prose-a:text-white hover:prose-a:text-gray-600 dark:hover:prose-a:text-gray-400 prose-p:text-gray-600 dark:prose-p:text-gray-300 prose-headings:text-black dark:prose-headings:text-white prose-strong:text-black dark:prose-strong:text-white prose-code:text-black dark:prose-code:text-white">
      <slot />
    </div>
  </article>
</Layout>