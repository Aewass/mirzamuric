---
import { Building2, Calendar } from 'lucide-astro'

interface Experience {
  company: string;
  position: string;
  period: string;
  description: string[];
  technologies: string[];
}

const experiences: Experience[] = [
  {
    company: "Evoila Bosnia",
    position: "Frontend Developer",
    period: "2022 - Present",
    description: [
      "Developed enterprise-scale Angular applications",
      "Implemented responsive designs using modern CSS frameworks",
      "Collaborated with cross-functional teams to deliver high-quality solutions",
      "Mentored junior developers and conducted code reviews"
    ],
    technologies: ["Angular", "TypeScript", "Tailwind", "GraphQL", "Blazor", "REST"]
  },
  {
    company: "TNTSoft",
    position: "Frontend Developer",
    period: "2019 - 2022",
    description: [
      "Developed and maintained multiple client-facing applications",
      "Built custom UI components and design systems",
      "Optimized application performance and user experience",
      "Integrated third-party APIs and services"
    ],
    technologies: ["Angular", "JavaScript", "SCSS", "REST", "Ionic", "ElectronJS"]
  }
];
---

<section class="max-w-4xl mx-auto px-4 py-20">
  <h2 class="text-3xl font-bold text-start mb-16">Experience</h2>

  <div class="space-y-16">
    {experiences.map((exp) => (
      <div class="group">
        <div class="flex flex-col sm:flex-row items-start justify-between mb-6">
          <div>
            <div class="flex items-center gap-2 mb-2">
              <Building2 class="w-5 h-5 stroke-gray-400" />
              <h3 class="text-2xl font-normal group-hover:text-gray-500 transition-colors">{exp.company}</h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300">{exp.position}</p>
          </div>
          <div class="flex items-center gap-2 text-gray-400 dark:text-gray-300 mt-4 sm:mt-1">
            <Calendar class="w-4 h-4" />
            <span class="text-sm tracking-wide">{exp.period}</span>
          </div>
        </div>

        <ul class="space-y-3 mb-6 text-gray-600 dark:text-gray-300 leading-relaxed">
          {exp.description.map(item => (
            <li class="pl-4 relative before:absolute before:left-0 before:top-[0.6em] before:w-1 before:h-1 before:bg-gray-300">
              {item}
            </li>
          ))}
        </ul>

        <div class="flex flex-wrap gap-x-6 text-sm tracking-wide text-gray-400">
          {exp.technologies.map(tech => (
            <span class="uppercase text-[11px]">{tech}</span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
