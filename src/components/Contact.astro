---
import { Linkedin, Instagram, Mail, Layout } from 'lucide-astro'

interface ContactLink {
  name: string;
  icon: typeof Layout;
  href: string;
  label: string;
}

const contacts: ContactLink[] = [
  {
    name: 'LinkedIn',
    icon: Linkedin,
    href: 'https://www.linkedin.com/in/mirza-muric-85213a180/',
    label: 'Connect on LinkedIn'
  },
  {
    name: 'Instagram',
    icon: Instagram,
    href: 'https://instagram.com/free_mountaineer',
    label: '@free_mountaineer'
  },
  {
    name: 'Email',
    icon: Mail,
    href: 'mailto:mirza_muric@outlook.com',
    label: 'mirza_muric@outlook.com'
  }
];
---

<footer class="bg-gray-50">
    <div class="max-w-5xl mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold text-center mb-12">Get in Touch</h2>
  
      <div class="flex flex-col md:flex-row items-center justify-center gap-8 mb-8">
        {contacts.map(({ name, icon: Icon, href, label }) => (
          <a
            href={href}
            rel="noopener noreferrer"
            target="_blank"
            class="flex items-center gap-3 p-4 rounded-lg hover:bg-gray-100 transition-colors group"
            aria-label={`Contact via ${name}`}
          >
            <Icon class="w-6 h-6 stroke-gray-800 group-hover:stroke-black" />
            <span class="text-gray-800 group-hover:text-black font-medium">{label}</span>
          </a>
        ))}
      </div>
  
      <p class="text-center text-gray-600 text-sm">
        Â© Mirza Muric. All rights reserved.
      </p>
    </div>
</footer>
