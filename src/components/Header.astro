---
import { Image } from 'astro:assets';
import avatar from '../assets/image.svg';
import avatarInverted from '../assets/image-inverted.svg';
---

<header class="h-screen flex items-center justify-center px-4">
  <div class="flex flex-col md:flex-row items-center gap-12 max-w-4xl mx-auto">
    <div class="w-40">
      <Image
        src={avatar}
        alt="Profile Avatar"
        loading="eager"
        class="w-full h-full object-contain block dark:hidden"
      />
      <Image
        src={avatarInverted}
        alt="Profile Avatar"
        loading="eager"
        class="w-full h-full object-contain block hidden dark:block"
      />
    </div>

    <div class="max-w-lg text-center md:text-left">
      <div class="overflow-hidden">
        <h1 class="text-4xl font-bold mb-6 reveal-text">Hi, I'm Mirza</h1>
      </div>
      <div class="overflow-hidden">
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed mb-8 reveal-text delay-200">
          I'm a <b>Frontend Developer</b> who likes solving problems. I build web applications and websites with a focus on clean code and great design.
        </p>
      </div>
      <div class="flex gap-4 justify-center md:justify-start">
        <a 
          href="/cv" 
          class="button-light group w-[160px] px-6 py-2.5 bg-gray-100 text-gray-600 rounded-lg text-lg border border-gray-200 relative overflow-hidden text-center"
        >
          <span class="relative z-10 group-hover:text-gray-900 transition-colors">View CV</span>
        </a>
        <a 
          href="/mirza-muric-cv.pdf" 
          download
          class="button-dark group w-[160px] px-6 py-2.5 bg-gray-800 text-white rounded-lg text-lg border border-gray-700 relative overflow-hidden text-center"
        >
          <span class="relative z-10">Download CV</span>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .button-light {
    transition: all 0.2s ease;
  }

  .button-light:hover {
    background-color: #f3f4f6;
    transform: translateY(-1px);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .button-dark {
    transition: all 0.2s ease;
  }

  .button-dark:hover {
    transform: translateY(-1px);
    background-color: #1f2937;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .reveal-text {
    animation: revealText 0.8s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    opacity: 0;
    transform: translateY(1rem);
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  @keyframes revealText {
    from {
      opacity: 0;
      transform: translateY(1rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .button-light,
    .button-dark {
      transition: none !important;
      transform: none !important;
    }
    .reveal-text {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  .button-light::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.5s ease;
  }

  .button-light:hover::before {
    left: 100%;
  }

  .button-dark::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, transparent, rgba(255, 255, 255, 0.05), transparent);
    transition: left 0.5s ease;
  }

  .button-dark:hover::before {
    left: 100%;
  }
</style>
