---
import Layout from '../layouts/Layout.astro';
import { CheckCircle2 } from 'lucide-astro';
---

<Layout title="Message Sent - Mirza Muric" description="Thank you for your message">
  <div class="h-screen flex items-center justify-center px-4">
    <div class="max-w-md mx-auto p-6 text-center">
      <div class="mb-6 flex justify-center">
          <CheckCircle2 class="w-12 h-12 " />
      </div>
      
      <h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        Message Sent Successfully!
      </h1>
      
      <p class="text-gray-600 dark:text-gray-300 mb-8">
        Thank you for reaching out. I'll get back to you as soon as possible.
      </p>
      
      <a 
        href="/" 
        class="button-dark group px-8 py-3 bg-gray-800 text-white rounded-lg text-lg border border-gray-700 relative overflow-hidden text-center inline-flex items-center gap-2"
      >
        Return Home
      </a>
    </div>
  </div>
</Layout> 