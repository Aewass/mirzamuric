---
import Layout from '../layouts/Layout.astro';
import { Phone, Mail, MapPin, Globe } from 'lucide-astro';

const experiences = [
  {
    company: "Evoila Bosnia",
    position: "Frontend Developer",
    period: "2022 - Present",
    description: [
      "Developed enterprise-scale Angular applications for both internal use and external clients",
      "Created reusable component libraries and CSS design systems",
      "Maintained comprehensive documentation and contributed regularly to internal knowledge base",
      "Mentored junior developers and conducted code reviews"
    ],
    technologies: ["Angular", "TypeScript", "Tailwind", "GraphQL", "Blazor", "REST"]
  },
  {
    company: "TNTSoft",
    position: "Frontend Developer",
    period: "2019 - 2022",
    description: [
      "Started my development career in a fast-paced betting industry environment",
      "Built complex applications handling real-time data and mobile apps using Ionic",
      "Optimized application performance and user experience in high-traffic scenarios",
      "Mentored junior developers while managing multiple concurrent projects"
    ],
    technologies: ["Angular", "JavaScript", "SCSS", "REST", "Ionic", "ElectronJS"]
  }
];

const technologies = {
  "frontend frameworks": [
    { name: 'Angular', expert: true },
    { name: 'Ionic' },
    { name: 'Blazor' },
    { name: 'JavaScript/TypeScript', expert: true },
    { name: 'Astro' },
    { name: 'ElectronJS' },
  ],
  "styling": [
    { name: 'CSS/SCSS', expert: true },
    { name: 'Tailwind' },
    { name: 'PrimeNG' },
    { name: 'Material' },
    { name: 'Bootstrap' },
    { name: 'DevExpress' },
  ],
  "tools": [
    { name: 'Git' },
    { name: 'VS Code' },
    { name: 'Visual Studio' },
    { name: 'AI Tools' },
    { name: 'GraphQL' },
    { name: 'REST' },
  ]
};
---

<Layout title="CV - Mirza Muric" description="Professional CV of Mirza Muric - Frontend Developer">
  <div class="max-w-4xl mx-auto px-4 py-6">
    <!-- Header -->
    <header class="mb-4">
      <div class="mb-4">
        <h1 class="text-4xl font-bold mb-1 text-gray-900">
          Mirza Muric
        </h1>
        <p class="text-lg text-gray-600 font-medium">Frontend Developer</p>
      </div>
      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
        <p class="flex items-center gap-2">
          <MapPin class="w-4 h-4" />
          Sarajevo, Bosnia
        </p>
        <p class="flex items-center gap-2">
          <Phone class="w-4 h-4" />
          +387 61 972 508
        </p>
        <p class="flex items-center gap-2">
          <Globe class="w-4 h-4" />
          mirzamuric.com
        </p>
        <p class="flex items-center gap-2">
          <Mail class="w-4 h-4" />
          mirza_muric@outlook.com
        </p>
      </div>
    </header>

    <!-- Professional Summary -->
    <section class="mb-4">
      <h2 class="text-xl font-bold mb-2 flex items-center gap-2">
        <span class="h-1 w-6 bg-gray-900 rounded-full"></span>
        Professional Summary
      </h2>
      <p class="text-gray-600 leading-relaxed text-sm pl-8">
        Frontend developer with over 5 years of experience and a passion for learning new technologies. 
        I enjoy building both visually appealing websites and complex enterprise applications. 
        Having worked on various projects, from simple landing pages to large-scale apps, 
        I've developed a good eye for design while maintaining clean code practices. 
        Strong communicator with proven ability to independently handle client interactions and 
        effectively translate business requirements into technical solutions.
      </p>
    </section>

    <!-- Experience -->
    <section class="mb-4">
      <h2 class="text-xl font-bold mb-2 flex items-center gap-2">
        <span class="h-1 w-6 bg-gray-900 rounded-full"></span>
        Professional Experience
      </h2>
      <div class="space-y-3">
        {experiences.map((exp) => (
          <div class="pl-8 relative before:absolute before:left-0 before:top-0 before:bottom-0 before:w-[2px] before:bg-gradient-to-b before:from-gray-900 before:to-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">{exp.company}</h3>
            <p class="text-gray-500 mb-1 text-sm font-medium">{exp.position} | {exp.period}</p>
            <ul class="list-none space-y-0.5 mb-1 text-gray-600 text-sm">
              {exp.description.map(item => (
                <li class="flex items-start gap-2">
                  <span class="h-1.5 w-1.5 bg-gray-400 rounded-full mt-1.5"></span>
                  {item}
                </li>
              ))}
            </ul>
            <div class="flex flex-wrap gap-1">
              {exp.technologies.map(tech => (
                <span class="px-2 py-0.5 bg-gray-100 text-gray-600 rounded-md text-xs border border-gray-200">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-4">
      <h2 class="text-xl font-bold mb-2 flex items-center gap-2">
        <span class="h-1 w-6 bg-gray-900 rounded-full"></span>
        Technical Skills
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 pl-8">
        {Object.entries(technologies).map(([category, items]) => (
          <div class="space-y-1">
            <h3 class="text-base font-semibold capitalize text-gray-900">{category}</h3>
            <div class="space-y-0.5">
              {items.map(({ name, expert }) => (
                <div class="flex items-center gap-2 text-sm">
                  <span class="text-gray-600">
                    {name}
                  </span>
                  {expert && (
                    <span class="text-xs px-1.5 py-0.5 bg-gradient-to-r from-gray-900 to-gray-700 text-white rounded-md">
                      Expert
                    </span>
                  )}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Education and Languages -->
    <section class="mb-4">
      <!-- Education -->
      <div class="mb-4">
        <h2 class="text-xl font-bold mb-2 flex items-center gap-2">
          <span class="h-1 w-6 bg-gray-900 rounded-full"></span>
          Education
        </h2>
        <div class="text-gray-600 text-sm pl-8 space-y-1.5">
          <p class="flex items-start gap-2">
            <span class="h-1.5 w-1.5 bg-gray-400 rounded-full mt-1.5"></span>
            Early programming experience with BASIC in elementary school
          </p>
          <p class="flex items-start gap-2">
            <span class="h-1.5 w-1.5 bg-gray-400 rounded-full mt-1.5"></span>
            Web development fundamentals (HTML, CSS, JavaScript) in high school
          </p>
          <p class="flex items-start gap-2">
            <span class="h-1.5 w-1.5 bg-gray-400 rounded-full mt-1.5"></span>
            HR Management studies in college
          </p>
        </div>
      </div>

      <!-- Languages -->
      <div>
        <h2 class="text-xl font-bold mb-2 flex items-center gap-2">
          <span class="h-1 w-6 bg-gray-900 rounded-full"></span>
          Languages
        </h2>
        <div class="text-gray-600 text-sm pl-8 space-y-1.5">
          <p class="flex items-start gap-2">
            <span class="h-1.5 w-1.5 bg-gray-400 rounded-full mt-1.5"></span>
            Bosnian (Native), English (Fluent)
          </p>
          <p class="flex items-start gap-2">
            <span class="h-1.5 w-1.5 bg-gray-400 rounded-full mt-1.5"></span>
            Slovene (Basic), German (Beginner)
          </p>
        </div>
      </div>
    </section>

    <!-- Navigation and Download Buttons -->
    <div class="flex justify-center gap-4 items-center">
      <a 
        href="/"
        class="px-4 py-1.5 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition-all text-sm border border-gray-200"
      >
        Back to Home
      </a>
      <a 
        href="/mirza-muric-cv.pdf"
        download
        class="px-4 py-1.5 bg-gradient-to-r from-gray-900 to-gray-700 text-white rounded-lg hover:from-gray-800 hover:to-gray-600 transition-all text-sm"
      >
        Download PDF
      </a>
    </div>
  </div>
</Layout>

